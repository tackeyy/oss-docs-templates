{
  "name": "oss-docs-templates",
  "version": "1.0.0",
  "description": "Reusable OSS documentation templates with one-command setup",
  "private": true,
  "scripts": {
    "lint": "npm run lint:md && npm run lint:yaml && npm run lint:sh",
    "lint:md": "markdownlint-cli2 '**/*.md' '!node_modules' '!CONTRIBUTING_GUIDE_PROPOSAL.md'",
    "lint:yaml": "yamllint .",
    "lint:sh": "shellcheck apply-templates.sh"
  },
  "devDependencies": {
    "markdownlint-cli2": "^0.12.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tackeyy/oss-docs-templates.git"
  },
  "keywords": [
    "oss",
    "documentation",
    "templates",
    "contributing",
    "code-of-conduct"
  ],
  "author": "tackeyy",
  "license": "MIT"
}
